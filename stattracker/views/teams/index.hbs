{{#if user}}
<div id="addTeamBtn">
<a href="/teams/add" class="btn btn-primary">Add a Team</a>
</div>
{{/if}}


<body id="team-table">
  <table class="table table-striped table-dark table-hover ">
    <thead>
      <th>Name</th>
    </thead>
    <tbody>
      {{#each dataset}}
        <tr>
          <td>{{this.name}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</body>